{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "NVCC build active file",
            "command": "/opt/cuda/bin/nvcc",
            "args": [
                "-Wno-deprecated-gpu-targets",
                "-g",
                "-I${workspaceFolder}/include",
                "${fileDirname}/glad.c",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",
                "-lglfw"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}